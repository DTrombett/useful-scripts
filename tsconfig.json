{
	"include": ["src/**/*"],
	"extends": [
		"@tsconfig/recommended/tsconfig.json",
		"@tsconfig/strictest/tsconfig.json",
		"@tsconfig/node22/tsconfig.json"
	],
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"exactOptionalPropertyTypes": false,
		"noEmit": true,
		"outDir": "dist",
		"pretty": true,
		"sourceMap": true
	}
}
